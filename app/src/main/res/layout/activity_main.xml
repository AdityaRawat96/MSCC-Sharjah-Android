<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="danysam.net.churchdirectory.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:background="@drawable/backgroundbottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
                android:id="@+id/main_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/home_image_cardinals"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:contentDescription="@string/static_text_cardinals"
                        android:scaleType="centerCrop"
                        android:background="@drawable/gradient1"
                        app:layout_collapseMode="parallax" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/static_text_cardinals"
                        android:scaleType="centerCrop"
                        android:src="@drawable/backagroundtop"
                        app:layout_collapseMode="none" />

                </RelativeLayout>

                <include
                    layout="@layout/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />


            </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SYRO MALANKARA CATHOLIC MAJOR ARCHIEPISCOPAL CHURCH"
                            android:textAlignment="center"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_size_heading" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="St. Michael's Catholic Church, Sharjah, UAE"
                            android:textAlignment="center"
                            android:textColor="@color/textPrimary"
                            android:textSize="@dimen/text_size_sub_heading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/banner" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="120dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/button_main_about"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/about_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="About Church"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                        <Button
                            android:id="@+id/button_main_directory"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/directory_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Directory"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/button_main_committee"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/committee_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Committee"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/button_main_news"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/announcement_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Announcements"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/button_main_articles"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/article_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Articles"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/button_main_contact"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/contacts_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Contacts"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/button_main_calender"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/calendar_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Liturgical\nCalender"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/button_main_downloads"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/downloads_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Liturgical\nDownloads"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/button_main_pious"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:drawableTop="@mipmap/association_foreground"
                            android:drawablePadding="-30dp"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:text="Pious\nAssociations"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="
#D4B15E"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginBottom="90dp"
            android:layout_marginTop="16dp">

            <TextView
                android:visibility="visible"
                android:text=""
                android:id="@+id/MarqueeText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#820456"
                android:textColor="#FFF"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/advertisementImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:adjustViewBounds="true"
                android:minHeight="50dp"
                android:scaleType="fitStart" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_drawer" />

</android.support.v4.widget.DrawerLayout>
